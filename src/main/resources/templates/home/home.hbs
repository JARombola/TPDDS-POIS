{{#partial "contenido"}}

<div class="jumbotron">
  <h1>Bienvenido a --POIS--</h1>
</div>	

 
 <form action="/login" method="POST" class="form-horizontal">
	
	<div class="panel panel-primary">
	 
	 <div class="panel-heading">Login</div>
	 
	 <div class="panel-body">
		 <div class="form-group">
		    <label for="usuario" class="col-sm-5 control-label">Usuario</label>
	    	<div class="col-sm-3">
	      		<input type="text" class="form-control" placeholder="Usuario" name="user" required>
		    </div>
  		</div>

	  	<div class="form-group text-left">
	    	<label for="pass" class="col-sm-5 control-label">Contrase&ntilde;a</label>
	    	<div class="col-sm-3">
	      		<input type="password" class="form-control" placeholder="Contrase&ntilde;a" name="pass" required>
	    	</div>
  		</div>
  		{{#if denegar}}
			  	<div class="alert alert-danger col-md-4 col-md-offset-4" role="alert">
				  <span class="glyphicon glyphicon-exclamation-sign centered" aria-hidden="true"></span>
				  <span class="sr-only">Error:</span>
				  Datos incorrectos!
  				</div>
		{{/if}}
  		</div>
  </div>

  <div class="form-group text-center">
      <input class="btn btn-primary btn-lg" type="submit" value="Ingresar">
  </div>
  
  
  
</form>

{{/partial}}


