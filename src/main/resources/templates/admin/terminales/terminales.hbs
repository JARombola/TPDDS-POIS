{{#partial "contenido"}}
<h1><u>Terminales</u></h1>
	
<div class="jumbotron">
	<form action="/admin/terminales/" method="GET">
		<div class="row">
		<div class="form-group col-xs-4">
			<label> <i>Comuna</i> </label>
			<input type="text" class="form-control" placeholder="[TODAS]" name="comuna">
		</div>
		
		<!-- <div class="form-group col-xs-4">
			<label> Comuna </label>
			<select class="form-control " name="comuna">
				<option value=>Ninguna</option>
			</select> 
		</div> -->

		</div>
		<button class="btn btn-outline-success" type="submit"><span class="glyphicon glyphicon-search"></span>  Buscar</button>
	
	<label><i> - Resultados: {{size terminales}}</i> </label>
	</form>
</div>	
<table class="table table-stripped">
		<thead>
			<tr>
        		<th>ID</th>
        		<th>Nombre</th>
      		</tr>
		</thead>
	 	{{#each terminales}}
			<tbody>
			<tr>
				<td> {{id}} </td>
				<td> {{nombre}} </td>
				<td>
					<a href="/admin/terminales/detalles?id={{id}}" data-target="#detallesTerminal" data-toggle="modal">Detalles<span class="glyphicon glyphicon-triangle-bottom"></span></a>
				<div class="modal fade" id="detallesTerminal" role="dialog">
 				    <div class="modal-dialog">
 			    	<div class="modal-content" >
 			    </div>
				</td>
				<td> <a href="/admin/terminales/modificar?id={{id}}"><span class="glyphicon glyphicon-pencil"></span></a>
				</td>
				<td> 
					<a href="/admin/terminales/eliminar?id={{id}}"><span class="glyphicon glyphicon-trash"></span></a>
				</td>
			
			</tr>
		{{/each}}
		</tbody>
</table>
{{/partial}}

{{>layoutTerminal.hbs}}

 <script>
 $('#detallesTerminal').on('hidden.bs.modal', function () {
   $(this).removeData('bs.modal');
 });
 </script>