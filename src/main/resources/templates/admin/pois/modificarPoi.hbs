{{#partial "contenido"}}

{{#with detalles}}

<form action="/admin/POIS/modif?id={{id}}" method="POST" class="form-horizontal">
<div class="panel panel-default">
  <div class="panel-heading" alin><span class="glyphicon glyphicon-globe"></span>   {{nombre}} ({{direccion.calle}} - {{direccion.numero}})</div>
  
	<div class="panel-body">
			 
			 <div class="form-group">
				<label for="nombre" class="control-label col-sm-2"> Nombre: </label>
				<div class="col-sm-6"> 
					<input type="text" class="form-control" value={{nombre}} name="nombre">
				</div>
			</div>
			
			 <div class="form-group">
				<label for="direccion" class="control-label col-sm-2"> Direccion: </label>
				<div class="col-sm-6"> 
					<input type="text" class="form-control" value={{direccion.calle}} name="direccion">
				</div>
				<label for="numero" class="control-label col-sm-2"> Numero: </label>
				<div class="col-sm-2"> 
					<input type="number" class="form-control" value={{direccion.numero}} name="altura">
				</div>
			</div>
			
			<div class="form-group">
				 <div class="form-group">
					<label for="piso" class="control-label col-sm-2"> Piso: </label>
					<div class="col-sm-2"> 
						<input type="number" class="form-control" value={{direccion.piso}} name="piso">
					</div>
				<label for="dpto" class="control-label col-sm-2"> Departamento: </label>
				<div class="col-sm-2"> 
					<input type="number" class="form-control" value={{direccion.dpto}} name="dpto">
				</div>
				</div>
			</div>
			
			<div class="form-group">
				<label for="barrio" class="control-label col-sm-2"> Barrio: </label>
				<div class="col-sm-6"> 
					<input type="text" class="form-control" value={{direccion.barrio}} name="barrio">
				</div>
			</div>
			
			<div class="form-group">
				<label for="localidad" class="control-label col-sm-2"> Localidad: </label>
				<div class="col-sm-6"> 
					<input type="text" class="form-control" value={{direccion.localidad}} name="localidad">
				</div>
			</div>
			
			<div class="form-group">
				<label for="provincia" class="control-label col-sm-2"> Provincia: </label>
				<div class="col-sm-6"> 
					<input type="text" class="form-control" value={{direccion.provincia}} name="provincia">
				</div>
			</div>
			
			<div class="form-group">
				<label for="pais" class="control-label col-sm-2"> Pais: </label>
				<div class="col-sm-6"> 
					<input type="text" class="form-control" value={{direccion.pais}} name="pais">
				</div>
			</div>
			
			<div class="form-group">
				 <div class="form-group">
					<label for="latitud" class="control-label col-sm-2"> Latitud: </label>
					<div class="col-sm-2"> 
						<input type="number" class="form-control" value={{direccion.coordenadas.latitud}} name="lat">
					</div>
				<label for="longitud" class="control-label col-sm-2"> Longitud: </label>
				<div class="col-sm-2"> 
					<input type="number" class="form-control" value={{direccion.coordenadas.longitud}} name="long">
				</div>
				</div>
			</div>
	</div>

	 <div class="panel-footer text-right">
	 	<button class="btn btn-default" type="submit">Modificar</button>
	 	<button class="btn btn-default">Cancelar</button>
	</div>

</div> 
</form>
{{/with}}

{{/partial}}

{{>layoutAdmin.hbs}}
